<!-- views/profile.ejs -->
<!DOCTYPE html>
<html><head>
  <title>Profile Page</title>
  <% include includes/header.ejs %>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
  <link href="/stylesheets/profilepage.css" rel="stylesheet" type="text/css"/> 
</head>

<body>
  <% include partials/navbarlogin.ejs %>
  <div class="container">
  
    <div class="row">

      <!-- Profile info -->
      <div class="row-fluid col-sm-10 col-sm-offset-3 col-md-12 col-md-offset-2 main">
        
        <h1 class="page-header"><%= fname %> <%= lname %></h1>
        <!-- <h1 class="page-header"><%= username %>'s seller profile</h1> -->
        <!-- profile picture -->
          <div class="col-md-5">
            <img data-src="holder.js/200x200/auto/vine" class="img-thumbnail" alt="200x200" src="<%=profilepic%>"  data-holder-rendered="true">
          </div> <!--col-md-3 col-md-offset-2-->

        <!--Profile info-->
        <div class="col-md-5">
          <form>
            <div class="form-horizontal">

              <h4>Username</h4>              
              <p><%= username %></p>

              <h4>Email</h4>
              <p><%= email %></p>

              <h4>Phone</h4>
              <p><%= phone %></p>                

              <h4>School</h4>
              <p><%= school %></p>

            </div>
          </form>


          <p>
            <form action="/editprofile" method="get">
              <button type="submit" class="form-control btn btn-success btn-md" style="width: 120px">Edit Profile</button>
            </form>
          </p>   

        </div><!--col-md-5-->

      </div><!-- col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main -->

      <!-- Items -->
      <div class="row">
        <div class="col-sm-9 col-sm-offset-3 col-md-12 col-md-offset-2 main">

          <!-- Add script to get different fields?? -->
          <!-- Selling Snippets -->
          <h2>Selling</h2>
          <p><%= fname %> is selling these books...</p>
          <div class="row placeholders">

            <div class="col-sm-8">
                <% for(var i = 0; i < selling.length; i++) { %>
                  <%- include('partials/sellingsnippet.ejs', {data: selling[i]}) %>
                <% } %>
            </div>

          </div> <!--row placeholders-->

          
          <!-- Add script to get different fields?? -->
          <!-- Wishlist Snippets -->
          <h2>Wishlist</h2>
          <p><%= fname %> is looking for these books...</p>
          <div class="row placeholders">
            <% for(var i = 0; i < wishList.length; i++) { %>
              <%- include('partials/wishlistsnippet.ejs', {data: wishList[i]}) %>
            <% } %>
          </div> <!--row placeholders wishlistsnips-->


          <div class="col-md-5">
            <!-- add things to wishlist -->
            <h2>Add a Book to Your Wishlist</h2>
            <form action="/addtowishlist" method="post">
              <div class="form-horizontal">

                <div class="form-group">
                  <div class="col-sm-8">
                    <p><input type="isbn13" class="form-control" name="isbn13" maxlength="15" placeholder="ISBN-13">
                    <button type="submit" class="form-control btn btn-success btn-md">Add to Wishlist</button></p>
                  </div> <!--col-sm-8-->
                </div> <!--form-group-->

              </div> <!-- form-horizontal -->

              <div class="form-group">
              <div class="col-sm-offset-4 col-sm-8">
<!--                 <button type="submit" class="form-control btn btn-success btn-md">Add to Wishlist</button> -->
              </div> <!--col-sm-8-->
              </div> <!--form-group-->
            </form>
      </div>
      </div><!--row-Selling & Wishlist-->

    </div> <!--row-->
  </div><!-- /.container-fluid -->

  <% include includes/footer.ejs %>
</body></html>