<!-- views/signup.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>SignUp</title>
  <% include includes/header.ejs %>
</head>

<body>
  <% include partials/navbar.ejs%>

  <div class="container">
  <div class="row-fluid col-sm-10 col-sm-offset-3 col-md-12 col-md-offset-1 main">

    <!--Sign up-->
    <div class="row">
      <div class="col-md-3">
        <h2><span class="fa fa-sign-in"></span> Sign Up</h2>
        <!-- show any messages that come back with authentication -->
        <% if (message !== '') { %>
          <% if (message.length > 15) { %>
              <div class="alert alert-danger"><%= message %></div>
          <% } else { %>
              <div class="alert alert-success"><%= message %></div>
          <% } %>
        <% } %>
      </div>
    </div>


    <!-- profile picture -->
    <div class="col-md-4">
      <img class="img-thumbnail" alt="200x200" src="/images/profile.png" data-holder-rendered="true">
      <br>Optional: Choose a profile picture:
      <br><%= include partials/imgupload.ejs %>
    </div> <!--col-md-3 col-md-offset-2-->

    <!-- Sign Up Form -->
    <div class="col-md-5">
      <!-- <form action="/"> -->
      <form action="/signup" method="post">
        <div class="form-horizontal">

          <div class="form-group">
            <label for="username" class="col-sm-4 control-label">Username*</label>
            <div class="col-sm-8">
              <input type="username" class="form-control" name="username" placeholder="Desired Username">
            </div> <!--col-sm-8-->
          </div> <!--form-group-->

          <div class="form-group">
            <label for="password" class="col-sm-4 control-label">Password*</label>
            <div class="col-sm-8">
              <input type="password" class="form-control" name="password" placeholder="Enter password">
            </div> <!--col-sm-8-->
          </div> <!--col-sm-10-->

          <div class="form-group">
            <label for="confirmPassword" class="col-sm-4 control-label">Confirm Password*</label>
            <div class="col-sm-8">
              <input type="password" class="form-control" name="confirmPassword" placeholder="Re-enter password">
            </div> <!--col-sm-8-->
          </div> <!--form-group-->

          <div class="form-group">
            <label for="firstName" class="col-sm-4 control-label">First Name*</label>
            <div class="col-sm-8">
              <input type="text" class="form-control" name="firstName" placeholder="First Name">
            </div> <!--col-sm-8-->
          </div> <!--form-group-->

          <div class="form-group">
            <label for="lastName" class="col-sm-4 control-label">Last Name*</label>
            <div class="col-sm-8">
              <input type="text" class="form-control" name="lastName" placeholder="Last Name">
            </div> <!--col-sm-8-->
          </div> <!--form-group-->

          <div class="form-group">
            <label for="email" class="col-sm-4 control-label">Email address*</label>
            <div class="col-sm-8">
              <input type="email" class="form-control" name="email" placeholder="Enter your email">
            </div> <!--col-sm-8-->
          </div> <!--form-group-->

          <div class="form-group">
            <label for="phone" class="col-sm-4 control-label">Phone Number</label>
            <div class="col-sm-8">
              <input type="tel" class="form-control bfh-phone" name="phone" value="5555555555" data-format="(ddd) ddd-dddd">
              <!-- <input type="tel" class="form-control" name="phone" placeholder="Phone Number"> -->
            </div> <!--col-sm-8-->
          </div> <!--form-group-->

          <div class="form-group">
            <label for="institution" class="col-sm-4 control-label">Institution</label>
            <div class="col-sm-8">
              <input type="text" class="form-control" name="institution" placeholder="Name of College/University">
            </div> <!--col-sm-8-->
          </div> <!--form-group-->

          <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
              <button type="submit" class="form-control btn btn-success btn-md">Signup</button>
            </div> <!--col-sm-8-->
          </div> <!--form-group-->
          
          <div class="col-sm-offset-4 col-sm-8">
            <p>Already have an account? <a href="/">Login</a></p>
          </div>

        </div> <!--form-horizontal-->
      </form>

    </div> <!--col-md-5-->
    </div>
  </div> <!--container-fluid-->
  
  <% include includes/footer.ejs %>
</body></html>