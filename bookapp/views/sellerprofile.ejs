<!-- views/profile.ejs -->
<!DOCTYPE html>
<html><head>
  <title>Profile Page</title>
  <% include includes/header.ejs %>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
</head>

<body>
  <% include partials/navbarlogin.ejs %>
  <div class="container">
  
    <div class="row">
      <% include partials/searchbar.ejs %>

      <!-- Profile info -->
      <div class="row-fluid col-sm-10 col-sm-offset-3 col-md-12 col-md-offset-2 main">
        
        <h1 class="page-header"><%= userValues.firstname %> <%= userValues.lastname %></h1>
        <!-- <h1 class="page-header"><%= username %>'s seller profile</h1> -->
        <!-- profile picture -->
          <div class="col-md-5">
            <img data-src="holder.js/200x200/auto/vine" class="img-thumbnail" alt="200x200" src="<%= userValues.profilepic%>" data-holder-rendered="true">
          </div> <!--col-md-3 col-md-offset-2-->

        <!--Profile info-->
        <div class="col-md-5">
          <form>
            <div class="form-horizontal">

              <h4>Username</h4>              
              <p><%= userValues.username %></p>

              <h4>Email</h4>
              <p><%= userValues.email %></p>

              <h4>Phone</h4>
              <p><%= userValues.phone %></p>                

              <h4>School</h4>
              <p><%= userValues.institution %></p>

              <h4>Rating</h4>
              <p>...rating here...</p>

            </div>
          </form>   

        </div><!--col-md-5-->

      </div><!-- col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main -->

  </div><!-- /.container-fluid -->

  <% include includes/footer.ejs %>
</body></html>