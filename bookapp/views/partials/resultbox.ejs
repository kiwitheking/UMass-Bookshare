
  <div class="pin">
    <% if(data.cover === null){ %>
      <img src="/homepage_files/noimage.svg">
    <% }else{%>
      <img src="<%=data.cover%>">
    <% }%>
    


      <p><!-- yes we need this p tag -->

      <h5><b><%= data.title %></b>
        <br>by <%= data.author %>
      </h5>

      <h6>
        <%= "ISBN-13: " + data.isbn13 %>
        <!--links to seller profile -->
        <br>Posted by: <%=data.username%>
      </h6>

      <p>
        <% if(data.forsale == true){ %>
         <%= "Sell Price: $"+data.sellprice %>
        <% } else {%>
          <%= "This book is not for sale." %>
          <% } %>
      </p>

      <p>
        <% if(data.forrent == true){ %>
         <%= "Rent Price: $"+data.rentprice %>
        <% } else {%>
          <%= "This book is not for rent." %>
          <% } %>
      </p>

      <p>
        <% if(data.forborrow == true){ %>
         <%= "This book can be borrowed." %>
        <% } else {%>
          <%= "This book cannot be borrowed." %>
          <% } %>
      </p>


      <p>
        <% if(data.description === null) { %>
          <%= "Description: No description." %>
        <% } else {%>
          <%= "Description: " + data.description %>
        <% } %>
      </p>

      <!-- view seller button-->
      <p>
        <form action="/sellerprofile" method="post">
          <button type="submit" class="form-control btn btn-info btn-sm">View Seller</button>
          <input type="hidden" name="seller" value="<%=data.username%>">
        </form>
      </p>

      </p>

