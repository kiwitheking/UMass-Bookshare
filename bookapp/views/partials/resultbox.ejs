<div class="item col-xs-4 col-lg-4">
    <div class="thumbnail">
      <% if(data.cover === null){ %>
      <img src="/homepage_files/noimage.svg">
      <% }else{%>
        <img class="group list-group-image" src="<%=data.cover%>" data-holder-rendered="true">
      <% } %>
        <div class="caption">
            <h5 class="group inner list-group-item-heading hideoverflow">
               <b><%= data.title %></b></h5>
            <p class="group inner list-group-item-text hideoverflow">
               by <%= data.author %></p>
            <p class="group inner list-group-item-text">
              <%= "ISBN-13: " + data.isbn13 %>
              <br>Posted by: <%=data.username%></p>

            <p>
              <% if(data.forsale == true){ %>
               <b><%= "Sell Price: $"+data.sellprice %></b>
              <% } else {%>
                <%= "This book is not for sale." %>
              <% } %>
              <br><% if(data.forrent == true){ %>
               <b><%= "Rent Price: $"+data.rentprice %></b>
              <% } else {%>
                <%= "This book is not for rent." %>
                <% } %>
            </p>

            <p>
              <% if(data.forborrow == true){ %>
               <b><%= "This book can be borrowed." %></b>
              <% } else {%>
                <%= "This book cannot be borrowed." %>
                <% } %>
            </p>

            <div class="row"><div class="col-md-6 col-md-6">
              
            </div></div>
            <div class="row">
                <div class="col-md-6 col-md-6">
                    <form action="/sellerprofile" method="post">
                      <button type="submit" class="form-control btn btn-info btn-sm">View Seller</button>
                      <input type="hidden" name="seller" value="<%=data.username%>">
                    </form>
               </div>
            </div>
        </div>
    </div>
</div>